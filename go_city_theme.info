;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[navigation]      = 'Navigation'
regions[language_select]      = 'Language Select'
regions[header]          = 'Top Bar'
regions[hero_slider]     = 'Hero Slider'
regions[service_heading] = 'Service Header'
regions[service_one]     = 'Service One'
regions[service_two]     = 'Service Two'
regions[service_three]   = 'Service Trhee'
regions[service_four]    = 'Service Four'
